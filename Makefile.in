# Top-level Makefile for tclembedding extension

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

# Installation directories
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
includedir = @includedir@

INSTALL = @INSTALL@

SUBDIRS = unix

all: all-recursive

clean: clean-recursive

distclean: distclean-recursive
	rm -f config.status config.log configure

install: install-recursive

all-recursive clean-recursive distclean-recursive install-recursive:
	@for dir in $(SUBDIRS); do \
	  (cd $$dir && $(MAKE) $(@:-recursive=)); \
	done

.PHONY: all clean distclean install all-recursive clean-recursive \
        distclean-recursive install-recursive
